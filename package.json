{
  "name": "release-butler",
  "version": "1.0.0",
  "private": true,
  "author": {
    "name": "nnst0knnt",
    "email": "nnst0knnt@gmail.com"
  },
  "type": "module",
  "scripts": {
    "labels:generate": "tsx label-controller/generate-cli.ts",
    "labels:attach:lgtm": "tsx label-controller/attach-cli.ts --lgtm",
    "labels:sync": "npm run labels:generate && tsx label-controller/sync-cli.ts",
    "labels:sync:force": "npm run labels:generate && tsx label-controller/sync-cli.ts --replace-all",
    "pull-request:create": "tsx pull-request-controller/create-cli.ts",
    "pull-request:update": "tsx pull-request-controller/update-cli.ts",
    "pull-request:comment": "tsx pull-request-controller/comment-cli.ts",
    "release:create": "tsx release-controller/create-cli.ts",
    "package:deps": "ncu",
    "package:update": "ncu -i",
    "package:update:force": "ncu -u",
    "format": "prettier --write \".github/**/*.{yml,yaml,sh}\" \"./**/*.ts\"",
    "format:lint": "prettier --check \".github/**/*.{yml,yaml,sh}\" \"./**/*.ts\"",
    "lint": "npm-run-all --parallel format:lint lint:*",
    "lint:actions": "docker run --rm -v $(pwd):/repo --workdir=/repo rhysd/actionlint:latest -color",
    "lint:shell": "find .github -name '*.sh' -type f | grep -q . && docker run --rm -v $(pwd):/mnt koalaman/shellcheck:stable .github/**/*.sh || echo 'No shell scripts found.'",
    "lint:yaml": "docker run --rm -v $(pwd):/yaml cytopia/yamllint:latest -f parsable -c /yaml/.yamllint.yml /yaml/.github",
    "lint:ts": "eslint . --fix && tsc --noEmit",
    "test": "vitest run",
    "ci": "npm-run-all format lint test"
  },
  "devDependencies": {
    "@actions/github": "^6.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.15.3",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "dotenv": "^16.5.0",
    "eslint": "^9.25.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.0.0",
    "js-yaml": "^4.1.0",
    "npm-check-updates": "^18.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "prettier-plugin-sh": "^0.17.2",
    "tsx": "^4.19.4",
    "type-fest": "^4.40.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1",
    "vitest": "^3.1.2",
    "yargs": "^17.7.2"
  }
}
